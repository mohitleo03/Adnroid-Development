<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workouts"
    android:background="@drawable/workout_background2"
    >

    <TextView
        android:id="@+id/exercise"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="Exercises"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:id="@+id/chest_exercise"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Chest Exercise"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:background="@drawable/rounded_corners" />

    <Button
        android:id="@+id/back_exercise"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="BACK Exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3125"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corners"/>

    <Button
        android:id="@+id/biceps_exercise"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="BICEPS Exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corners"/>

    <Button
        android:id="@+id/triceps_exercise"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Triceps Exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5375"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corners"/>

    <Button
        android:id="@+id/shoulder_exercise"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Shoulder exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corners"/>

    <Button
        android:id="@+id/abs_exercise"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="ABS exercise "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7625"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corners"/>

    <Button
        android:id="@+id/leg_exercise"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="LEG exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corners"/>


</androidx.constraintlayout.widget.ConstraintLayout>